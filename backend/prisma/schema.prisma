generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  INCHARGE
  MEMBER
}

model users {
  id                    Int      @id @default(autoincrement())
  username              String   @unique
  password              String
  contactNumber         String
  liveMode              String   @default("audio")
  role                  Role     @default(MEMBER)
  watchLiveEnabled      Boolean  @default(true)
  submitFeedbackEnabled Boolean  @default(true)
  submitAccountabilityEnabled Boolean @default(true)
  inchargeId            Int?
  incharge              users?   @relation("InchargeMembers", fields: [inchargeId], references: [id], onDelete: SetNull)
  members               users[]  @relation("InchargeMembers")
  feedbacks             feedback[]
  accountabilities      accountability[]
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model feedback {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      users    @relation(fields: [userId], references: [id], onDelete: Cascade)
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model accountability {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      users    @relation(fields: [userId], references: [id], onDelete: Cascade)
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
